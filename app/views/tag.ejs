<%- include('./partials/header.ejs') %>

<h2 class="page-title"><%= tag.name %></h2>

<div class="cards">

    <% tag.questionsFromTags.forEach(question => { %>
        <card class="card">
            <div class="card_header">
                <img class="card_img" src="/img/<%= question.picture %>.jpg" alt="picture showing <%= question.picture %>">
                    
                <h3 class="card_title"><%= question.title %></h3>
               
            </div>
            <div class="card_body">
                <a class="btn card_link card_link--question" href="/question/<%= question.id %>">
                    Voir la r√©ponse
                </a>
            </div>
        </card>
    <% }) %>

</div>
        
