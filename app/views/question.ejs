        <a class="btn card_link card_link--tag" href="/tags/<%= tag.id %>">
            <div class="card_tag card_tag--<%= tag.name.toLowerCase() %>"><%= tag.name %></div>
        </a>
    <% }) %>
    <h2 class="page-title"><%= question.title %></h2>    
</div>
